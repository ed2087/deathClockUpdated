<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%- title %></title>


    <!-- check if  path icludes /terrorTales/horrorStory -->
    <% if (path.includes('/terrorTales/horrorStory')) { %>
        <!-- Meta Description -->
        <meta name="description" content="<%= story.storySummary %>">

        <!-- Social Media Meta Tags -->
        <meta property="og:title" content="<%= story.title %>">
        <meta property="og:description" content="<%= story.storySummary %>">
        <meta property="og:image" content="../../IMAGES/backgrounds/socialmedia.jpg">
        <meta property="og:url" content="https://www.terrorhub.com/terrorTales/horrorStory/<%= story.slug %>">
        <meta name="twitter:card" content="summary_large_image">

    <% }else{ %>

            <!-- Meta Description -->
            <meta name="description" content="Explore chilling horror stories, mysterious Creepy Pastas, and predict your lifespan with the Death Clock. Join the terror at TerrorHub - Your portal to the unknown.">

            
            <!-- Social Media Meta Tags -->
            <meta property="og:title" content="<%= title %>">
            <meta property="og:description" content="Explore chilling horror stories, mysterious Creepy Pastas, and predict your lifespan with the Death Clock. Join the terror at TerrorHub - Your portal to the unknown.">
            <meta property="og:image" content="../../IMAGES/logos/logo5.webp">
            <meta property="og:url" content="https://www.terrorhub.com/">
            <meta name="twitter:card" content="summary_large_image">

    <% } %>

    <!-- Favicon -->
    <link rel="icon" href="../../IMAGES/Icons/websiteicon.webp">
    
    <!-- Canonical URL add path -->
    <link rel="canonical" href="https://www.terrorhub.com<%= path %>">

    <!-- CSS -->
    <link rel="stylesheet" href="../../../CSS/normalize.css">
    <link rel="stylesheet" href="../../../CSS/global.css">
    <link rel="stylesheet" href="../../../CSS/nav.css">
    <link rel="stylesheet" href="../../../CSS/header.css">
    <link rel="stylesheet" href="../../../CSS/footer.css">
    <script src="https://kit.fontawesome.com/77ee606df4.js" crossorigin="anonymous"></script>

